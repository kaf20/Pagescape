<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".shop.ShopFragment">

    <FrameLayout android:id="@+id/shop_image_container"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/section_grey">
        <ImageView android:id="@+id/shop_image_view"
                   android:scaleType="fitXY"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"/>
    </FrameLayout>

    <FrameLayout android:id="@+id/description_container"
                 app:layout_constraintTop_toBottomOf="@id/shop_image_container"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
        <TextView android:id="@+id/description_text_view"
                  android:background="@drawable/section_grey"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"/>
    </FrameLayout>

    <FrameLayout android:id="@+id/map_container"
                 app:layout_constraintTop_toBottomOf="@id/description_container"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
        <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/map_view"/>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>